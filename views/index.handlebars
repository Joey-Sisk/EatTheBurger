<h1>Burgers!</h1>

<div class="row">
  <div>
    <h2>Fresh Burgers:</h2>

    <ul>
      {{#each burgers}}
      {{#unless devoured}}
      {{burger_name}}
      <button class="change-devour" data-id="{{id}}">
        EAT!
      </button>
      <br>
      {{/unless}}
      {{/each}}
    </ul>
  </div>

  <div class="row">
    <h2>Eaten Burgers:</h2>

    <ul>
      {{#each burgers}}
      {{#if devoured}}
      {{burger_name}}
      <br>
      {{/if}}
      {{/each}}
    </ul>
  </div>
</div>



<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="bu">Burger Name:</label>
    <input type="text" id="bu" name="name">
  </div>

  <button type="submit">Add Burger</button>
</form>